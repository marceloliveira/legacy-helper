<resources>

    <!-- Base application theme. -->
    <style name="Theme.LegacyHelperTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- customize the color palette -->
        <item name="colorPrimary">@color/material_blue_500</item>
        <item name="colorPrimaryDark">@color/material_blue_700</item>
        <item name="colorAccent">@color/material_light_green_A400</item>
    </style>
    <style name="ListTitle" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_black</item>
    </style>
    <style name="ListSubtitle" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/secondary_black</item>
    </style>
</resources>
